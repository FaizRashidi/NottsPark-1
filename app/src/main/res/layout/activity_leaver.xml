<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="getresult.example.asus.nottspark.Leaver">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Please fill in the following details"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary" />
    <EditText
        android:id="@+id/leaverBuilding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Building" />

    <EditText
        android:id="@+id/leaverDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Brief Description" />

    <Spinner
        android:id="@+id/parkerSpinner"
        style="@style/Material.Widget.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/vehicle_array"
        android:fontFamily="sans-serif"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:spinnerMode="dropdown"
        android:textSize="18sp" />

    <com.rey.material.widget.Button
        android:id="@+id/addVehicle"
        style="@style/Material.Drawable.Ripple.Touch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal"
        android:elevation="2dp"
        android:text="@string/add_vehicle"
        android:textColor="@android:color/white"
        app:rd_enable="true"
        android:layout_marginBottom="15dp" />

    <com.rey.material.widget.Button
        android:id="@+id/btnSearchParker"
        style="@style/Material.Drawable.Ripple.Touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_gravity="right"
        android:elevation="2dp"
        android:text="Search Leaver"
        android:textColor="@android:color/white"
        app:rd_enable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

</LinearLayout>
